{
  "compilerOptions": {
    "outDir": "./dist/",

    "module": "commonjs",
    "target": "es5",

    "jsx": "react",

    "lib": ["es2015", "dom"],

    "sourceMap": true,

    "allowJs": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "noImplicitAny": true
  },
  "exclude": [".git", "node_modules", "dist"]
}
