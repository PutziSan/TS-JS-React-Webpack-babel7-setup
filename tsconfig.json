{
  "compilerOptions": {
    "outDir": "./dist/",

    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",

    "jsx": "preserve",

    "lib": ["es6", "dom"],

    "sourceMap": false,

    "allowJs": true,

    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "exclude": [".git", "node_modules", "dist"]
}
